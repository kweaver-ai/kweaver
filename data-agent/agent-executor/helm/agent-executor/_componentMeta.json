{
  "conponentDefineType": "helm/service",
  "name": "agent-executor",
  "version": "1.0.0",
  "configSchema": {
    "title": "agent-executor",
    "description": "组件配置定义",
    "type": "object",
    "properties": {
      "resources": {
        "type": "object",
        "title": "容器资源控制",
        "properties": {
          "requests": {
            "type": "object",
            "description": "容器运行需要的最小资源分配",
            "properties": {
              "memory": {
                "type": "string",
                "title": "内存"
              },
              "cpu": {
                "type": "string",
                "title": "cpu"
              }
            }
          },
          "limits": {
            "type": "object",
            "description": "容器运行最大资源限制",
            "properties": {
              "memory": {
                "type": "string",
                "title": "内存"
              },
              "cpu": {
                "type": "string",
                "title": "cpu"
              }
            }
          }
        }
      },
      "replicaCount": {
        "type": "number",
        "title": "服务副本数"
      },
      "service": {
        "type": "object",
        "title": "服务配置",
        "properties": { 
            "telemetry": {
                "type": "object",
                "title": "可观测配置",
                "properties": {
                  "log": {
                    "type": "object",
                    "title": "日志配置",
                    "properties": {
                      "enabled": {
                        "type": "boolean",
                        "title": "是否开启日志"
                      }
                    }
                  },
                  "trace": {
                    "type": "object",
                    "title": "链路配置",
                    "properties": {
                      "enabled": {
                        "type": "boolean",
                        "title": "是否开启链路追踪"
                      }
                    }
                  },
                  "metric": {
                    "type": "object",
                    "title": "指标配置",
                    "properties": {
                      "enabled": {
                        "type": "boolean",
                        "title": "是否开启指标"
                      }
                    }
                  }
                }
            }
        }
    }
    }
  },
  "dependence": [
    {
      "name": "dip-da-dm-pre"
    },{
      "name": "rds"
    },
    {
      "name": "redis"
    },
    {
      "name": "opensearch"
    },
    {
      "name": "agent-factory"
    },
    {
      "name": "agent-operator-integration"
    }
  ]
}
